<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.opentcs.map.mapper.BuildingMapper">

    <!-- 建筑物表映射 -->
    <resultMap id="buildingResultMap" type="org.opentcs.map.domain.entity.Building">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="address" property="address"/>
        <result column="total_floors" property="totalFloors"/>
        <result column="underground_floors" property="undergroundFloors"/>
        <result column="description" property="description"/>
        <result column="properties" property="properties"/>
        <result column="is_active" property="active"/>
        <result column="created_by" property="createdBy"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>
    
    <!-- 基础查询字段 -->
    <sql id="baseColumns">
        id, code, name, type, address, total_floors, underground_floors, description, 
        properties, is_active, created_by, created_time, updated_by, updated_time
    </sql>

</mapper>
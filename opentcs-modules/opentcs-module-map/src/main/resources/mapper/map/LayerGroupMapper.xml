<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.opentcs.map.mapper.LayerGroupMapper">

    <select id="selectPageLayerGroup" resultType="org.opentcs.map.domain.entity.LayerGroup">
        SELECT * FROM layer_group
        <where>
            <if test="layerGroup.plantModelId != null">AND plant_model_id = #{layerGroup.plantModelId}</if>
            <if test="layerGroup.name != null and layerGroup.name != ''">AND name LIKE CONCAT('%', #{layerGroup.name}, '%')</if>
            <if test="layerGroup.visible != null">AND visible = #{layerGroup.visible}</if>
        </where>
    </select>

</mapper>
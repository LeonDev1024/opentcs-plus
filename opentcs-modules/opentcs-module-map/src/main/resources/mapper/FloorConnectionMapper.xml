<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.opentcs.map.mapper.FloorConnectionMapper">

    <!-- 跨楼层连接表映射 -->
    <resultMap id="floorConnectionResultMap" type="org.opentcs.map.domain.entity.FloorConnection">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="connection_type" property="connectionType"/>
        <result column="from_plant_model_id" property="fromPlantModelId"/>
        <result column="from_point_id" property="fromPointId"/>
        <result column="to_plant_model_id" property="toPlantModelId"/>
        <result column="to_point_id" property="toPointId"/>
        <result column="travel_time" property="travelTime"/>
        <result column="capacity" property="capacity"/>
        <result column="current_usage" property="currentUsage"/>
        <result column="access_level" property="accessLevel"/>
        <result column="is_active" property="active"/>
        <result column="properties" property="properties"/>
        <result column="created_by" property="createdBy"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>
    
    <!-- 基础查询字段 -->
    <sql id="baseColumns">
        id, name, code, connection_type, from_plant_model_id, from_point_id, to_plant_model_id,
        to_point_id, travel_time, capacity, current_usage, access_level, is_active, properties,
        created_by, created_time, updated_by, updated_time
    </sql>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.opentcs.vehicle.mapper.VehicleMapper">

    <select id="selectPageVehicle" resultType="org.opentcs.vehicle.domain.entity.Vehicle">
        SELECT * FROM vehicle
        <where>
            <if test="vehicle.name != null and vehicle.name != ''">AND name LIKE CONCAT('%', #{vehicle.name}, '%')</if>
            <if test="vehicle.state != null and vehicle.state != ''">AND state = #{vehicle.state}</if>
        </where>
    </select>

</mapper>